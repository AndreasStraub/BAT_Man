<!-- 
====================================================================
DATEI: Themes/GreenDark.xaml
====================================================================
Grünes Dark-Theme, angelehnt an dein vorhandenes Dark-Theme.
====================================================================
-->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- Schriftgrößen -->
    <system:Double x:Key="BaseFontSize">14</system:Double>
    <system:Double x:Key="InputFontSize">16</system:Double>
    <system:Double x:Key="HeaderFontSize">14</system:Double>
    <system:Double x:Key="SmallFontSize">12</system:Double>

    <!-- Grundfarben -->
    <!-- Hintergrund: dunkles, leicht entsättigtes Grün -->
    <SolidColorBrush x:Key="AppBackground" Color="#1E332A"/>
    <!-- Eingabefelder: etwas heller als Hintergrund -->
    <SolidColorBrush x:Key="TextBoxBackground" Color="#294335"/>
    <!-- Standard-Text: helles, leicht warmes Grau -->
    <SolidColorBrush x:Key="TextForeground" Color="#E3F1E8"/>
    <!-- Rahmen: dezentes Grün-Grau -->
    <SolidColorBrush x:Key="BorderColor" Color="#3A5245"/>

    <!-- Buttons -->
    <!-- Hauptbutton: mittleres Grün -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#4BA46A"/>
    <!-- Hover: etwas heller / frischer -->
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#5CBC7B"/>

    <Color x:Key="ButtonBackgroundColor">#4BA46A</Color>
    <Color x:Key="ButtonTextColor">#F7FFF9</Color>

    <!-- Gedrückt: etwas dunkler -->
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#3A7E52"/>
    <SolidColorBrush x:Key="ButtonText" Color="#F7FFF9"/>

    <!-- Listen-Hover -->
    <SolidColorBrush x:Key="ListItemHoverBackground" Color="#314A3A"/>

    <!-- Caret (Textcursor) -->
    <SolidColorBrush x:Key="ControlCaret" Color="#FF8AE3AC" />

</ResourceDictionary>
