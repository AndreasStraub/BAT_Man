<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="BaseFontSize">14</system:Double>
    <system:Double x:Key="InputFontSize">16</system:Double>
    <system:Double x:Key="HeaderFontSize">16</system:Double>
    <system:Double x:Key="SmallFontSize">12</system:Double>

    <SolidColorBrush x:Key="AppBackground" Color="#002b36"/>
    <SolidColorBrush x:Key="TextBoxBackground" Color="#535266"/>
    <SolidColorBrush x:Key="TextForeground" Color="#839496"/>
    <SolidColorBrush x:Key="BorderColor" Color="#073642"/>
    <SolidColorBrush x:Key="ButtonBackground" Color="#268bd2"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#2aa198"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#175e8e"/>

    <SolidColorBrush x:Key="ButtonText" Color="#fdf6e3"/>
    <Color x:Key="ButtonBackgroundColor">#268bd2</Color>
    <Color x:Key="ButtonTextColor">#fdf6e3</Color>

    <SolidColorBrush x:Key="ListItemHoverBackground" Color="#586e75"/>

    <SolidColorBrush x:Key="ControlCaret" Color="#268bd2" />
</ResourceDictionary>