<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="BaseFontSize">14</system:Double>
    <system:Double x:Key="InputFontSize">16</system:Double>
    <system:Double x:Key="HeaderFontSize">16</system:Double>
    <system:Double x:Key="SmallFontSize">12</system:Double>

    <SolidColorBrush x:Key="AppBackground" Color="#E6E6E6"/>

    <SolidColorBrush x:Key="TextBoxBackground" Color="#FFFFFF"/>

    <SolidColorBrush x:Key="TextForeground" Color="#333333"/>

    <SolidColorBrush x:Key="BorderColor" Color="#CCCCCC"/>

    <SolidColorBrush x:Key="ButtonBackground" Color="#859900"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#2aa198"/>
    <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#4e5b00"/>
    <SolidColorBrush x:Key="ButtonText" Color="#ffffff"/>

    <Color x:Key="ButtonBackgroundColor">#859900</Color>
    <Color x:Key="ButtonTextColor">#ffffff</Color>

    <SolidColorBrush x:Key="ListItemHoverBackground" Color="#D0D0D0"/>

    <SolidColorBrush x:Key="ControlCaret" Color="#859900" />

</ResourceDictionary>