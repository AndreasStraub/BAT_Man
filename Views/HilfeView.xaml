<UserControl x:Class="WPF_Test.Views.HilfeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="{DynamicResource AppBackground}">

    <!--  Grid mit 3 Zeilen  -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--  0: Titel  -->
            <RowDefinition Height="*"/>
            <!--  1: Inhalt (Scrollbar)  -->
            <RowDefinition Height="Auto"/>
            <!--  2: Footer (Button)  -->
        </Grid.RowDefinitions>

        <!--  HEADER (Zeile 0)  -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Titel}" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="{DynamicResource TextForeground}"
                   Margin="0,0,0,20"/>

        <!--  INHALT (Zeile 1)  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
            <StackPanel>

                <!--  Screenshot  -->
                <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="2" 
                        HorizontalAlignment="Left" Margin="0,0,0,30" CornerRadius="5">
                    <Image Source="{Binding BildPfad}" 
                           Stretch="Uniform" 
                           MaxHeight="550"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Border>

                <!--  Legende Titel (Lokalisiert via DynamicResource)  -->
                <TextBlock Text="{DynamicResource Help_Legend_Title}" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource TextForeground}"
                           Margin="0,0,0,15"/>

                <!--  Legende Liste  -->
                <ItemsControl ItemsSource="{Binding Legende}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                        Background="#E63946" 
                                        CornerRadius="15" 
                                        Width="30" Height="30" 
                                        HorizontalAlignment="Left" 
                                        VerticalAlignment="Top">
                                    <TextBlock Text="{Binding Nummer}" 
                                               Foreground="White" 
                                               FontWeight="Bold" 
                                               FontSize="16"
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Beschreibung}" 
                                           Foreground="{DynamicResource TextForeground}"
                                           FontSize="16"
                                           VerticalAlignment="Center" 
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!--  FOOTER / BUTTON (Zeile 2 - Unten Rechts)  -->
        <Grid Grid.Row="2">
            <Button Command="{Binding SchliessenCommand}" 
                    Content="{DynamicResource Help_Button_Back}"
                    HorizontalAlignment="Right" 
                    Width="150" Height="40"
                    FontSize="16">
            </Button>
        </Grid>

    </Grid>
</UserControl>