<Window x:Class="BAT_Man.Views.AddAktivitaetDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:BAT_Man.ViewModels"
        mc:Ignorable="d"
        
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{DynamicResource AppBackground}">

    <!--  
        FENSTER-TITEL (Dynamisch):
        Der Titel passt sich automatisch dem Kontext an ("Hinzufügen" vs. "Bearbeiten").
        Dies wird deklarativ über einen DataTrigger im Window-Style gelöst.
     -->
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="Title" Value="{DynamicResource AddActivityDialog_Title}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                    <Setter Property="Title" Value="{DynamicResource EditActivityDialog_Title}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Style>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--  INHALTSBEREICH  -->
        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!--  1. SPALTE: DATUM  -->
            <GroupBox Grid.Column="0" 
                      Header="{DynamicResource AddActivityDialog_Date}"
                      Style="{DynamicResource {x:Type GroupBox}}">
                <!--  DatePicker für kalendarische Datumsauswahl  -->
                <DatePicker Margin="10"
                            SelectedDate="{Binding AktivitaetZumBearbeiten.Datum, Mode=TwoWay}"/>
            </GroupBox>

            <!--  2. SPALTE: STATUS  -->
            <GroupBox Grid.Column="1" 
                      Header="{DynamicResource AddActivityDialog_Status}"
                      Style="{DynamicResource {x:Type GroupBox}}"
                      Margin="10,0,0,0">

                <!--  
                    LISTBOX FÜR STATUS:
                    Verwendet den 'RadioListBoxStyle', um die Auswahl intuitiver zu gestalten (Single Selection).
                    Die ItemsSource bindet an die Liste aller verfügbaren Status-Optionen aus der Datenbank.
                 -->
                <ListBox Margin="10"
                         Style="{StaticResource RadioListBoxStyle}"
                         ItemsSource="{Binding AlleStatusOptionen}"
                         SelectedItem="{Binding AusgewaehlterStatus, Mode=TwoWay}"/>
            </GroupBox>

            <!--  3. SPALTE: KOMMENTAR  -->
            <GroupBox Grid.Column="2" 
                      Header="{DynamicResource AddActivityDialog_Comment}"
                      Style="{DynamicResource {x:Type GroupBox}}"
                      Margin="10,0,0,0">

                <!--  MultiLineTextBoxStyle ermöglicht Zeilenumbrüche für längere Notizen  -->
                <TextBox Margin="10"
                         Style="{StaticResource MultiLineTextBoxStyle}"
                         Text="{Binding AktivitaetZumBearbeiten.Kommentar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </GroupBox>
        </Grid>

        <!--  FUSSLEISTE (Buttons)  -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Background="{DynamicResource AppBackground}"
                    Height="60">

            <!--  
                LÖSCHEN-BUTTON:
                Sichtbarkeit ist abhängig vom 'IsEditMode'.
                Bei neuen Aktivitäten (Insert) ist der Button ausgeblendet (Collapsed).
             -->
            <Button x:Name="btnDelete" 
                    Content="{DynamicResource AddActivityDialog_DeleteButton}" 
                    Margin="10"
                    Click="btnDelete_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!--  OK und ABBRECHEN  -->
            <!--  IsDefault="True": Enter-Taste löst das Click-Event aus  -->
            <Button x:Name="btnOK" 
                    Content="{DynamicResource Dialog_OK}" 
                    Margin="10"
                    IsDefault="True"
                    Click="btnOK_Click"/>

            <!--  IsCancel="True": ESC-Taste schließt das Fenster  -->
            <Button x:Name="btnCancel" 
                    Content="{DynamicResource Dialog_Cancel}" 
                    Margin="0,10,10,10"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>