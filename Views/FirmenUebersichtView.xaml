<UserControl x:Class="WPF_Test.Views.FirmenUebersichtView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView 
            Grid.Row="0"
            AlternationCount="2"
            ItemsSource="{Binding FirmenListe}"
            BorderThickness="0"
            Background="Transparent"
            SelectedItem="{Binding AusgewaehlteFirma, Mode=TwoWay}">
            
            <!--<ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="{DynamicResource TextBoxBackground}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>-->
            
            <!--<ListView.InputBindings>
                <MouseBinding MouseAction="LeftDoubleClick"
                              Command="{Binding BearbeitenCommand}" />
            </ListView.InputBindings>-->
            
            
            <ListView.View>
                <GridView>

                    <GridViewColumn Header="{DynamicResource CompanyList_Header_Company}" 
                                    Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="5,10">
                                    <TextBlock Text="{Binding Firmenname}" 
                                               FontWeight="Bold" 
                                               FontSize="16" 
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Ansprechpartner}" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="{DynamicResource CompanyList_Header_Contact}" 
                                    Width="250">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Telefon}" 
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding EMail}" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="{DynamicResource CompanyList_Header_Status}" 
                                    Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LetzterStatus, TargetNullValue='-'}" 
                                               VerticalAlignment="Center" 
                                               Margin="10"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="{DynamicResource CompanyList_Header_Notes}" 
                                    Width="300">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LetzteBemerkung, TargetNullValue='-'}" 
                                               VerticalAlignment="Center" 
                                               Margin="10"
                                               TextWrapping="Wrap"
                                               TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock Grid.Row="1"
                   Text="{DynamicResource CompanyList_DoubleClickHint}"
                   Foreground="{DynamicResource TextForeground}"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Opacity="0.7"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   FontStyle="Italic"
                   Margin="0,10,0,0"/>
    </Grid>
</UserControl>