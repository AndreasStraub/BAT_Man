<UserControl x:Class="BAT_Man.Views.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- 
            ZENTRALER BLOCK
            Beinhaltet die Begrüßung, den Titel und den Untertitel.
            Alles ist horizontal zentriert.
        -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Zeile 1: "Willkommen bei" -->
            <TextBlock Text="{DynamicResource Welcome_Intro}"
                       FontSize="24" 
                       Foreground="{DynamicResource TextForeground}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>

            <!-- Zeile 2: "BAT-Man" (Groß und Fett) -->
            <TextBlock Text="{DynamicResource Welcome_Title}"
                       FontSize="48" 
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextForeground}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Zeile 3: "Managementsystem..." -->
            <TextBlock Text="{DynamicResource Welcome_Subtitle}"
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextForeground}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- 
            HINWEIS-TEXT (Unten Links)
            "Bitte wählen Sie links eine Funktion"
            Kursiv gesetzt, wie im Screenshot.
        -->
        <TextBlock Text="{DynamicResource Welcome_Instruction}"
                   FontSize="16"
                   FontStyle="Italic"
                   Foreground="{DynamicResource TextForeground}"
                   Opacity="0.8"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Left"
                   Margin="20"/>
    </Grid>
</UserControl>