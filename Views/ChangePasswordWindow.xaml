<Window x:Class="BAT_Man.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Passwort festlegen" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource AppBackground}">

    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">

        <!--  EINGABEFELDER  -->
        <Label Content="Neues Passwort:" Foreground="{DynamicResource TextForeground}"/>
        <PasswordBox x:Name="textNeuesPasswort" Width="250" Margin="0,0,0,10"/>

        <Label Content="Passwort bestätigen:" Foreground="{DynamicResource TextForeground}"/>
        <PasswordBox x:Name="textPasswortBestaetigen" Width="250" Margin="0,0,0,20"/>

        <!--  BUTTONS  -->
        <Grid Width="250" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSpeichern"
                    Content="Speichern"
                    HorizontalAlignment="Left" 
                    Grid.Column="0" 
                    Margin="0,10,0,0"
                    IsDefault="True"
                    Command="{Binding SaveCommand}">

                <!--  
                    MULTIBINDING:
                    Da die Eigenschaft 'Password' keine DependencyProperty ist, kann sie nicht 
                    gebunden werden. Stattdessen werden die beiden PasswordBox-Objekte (View) 
                    als Parameter an das ViewModel übergeben.
                    Der 'MultiParameterConverter' wandelt die beiden Elemente in ein Objekt-Array um.
                 -->
                <Button.CommandParameter>
                    <MultiBinding Converter="{StaticResource MultiParameterConverter}">
                        <Binding ElementName="textNeuesPasswort"/>
                        <Binding ElementName="textPasswortBestaetigen"/>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>

            <Button x:Name="btnAbbrechen"
                    Content="Abbrechen"
                    HorizontalAlignment="Right" 
                    Grid.Column="1" 
                    Margin="0,10,0,0"
                    IsCancel="True"
                    Command="{Binding CancelCommand}"/>

        </Grid>

        <!--  HINWEIS-TEXT FÜR SICHERHEITSRICHTLINIEN  -->
        <TextBlock Text="{DynamicResource Password_RequirementsHint}"
                   Foreground="{DynamicResource TextForeground}"
                   FontSize="12"
                   FontStyle="Italic"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   Opacity="0.7"
                   Width="300"
                   Margin="0,20,0,0"/>

    </StackPanel>
</Window>