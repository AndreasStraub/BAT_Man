    <Style TargetType="ListViewItem">
        <!-- Basis-Eigenschaften für alle ListView-Zeilen -->
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="Background" Value="Transparent"/>

        <!-- WICHTIG: eigenes Template, das den GridViewRowPresenter nutzt -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <!-- Eine durchgehende Fläche pro Zeile, keine extra Linie oben -->
                    <Border x:Name="Bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        SnapsToDevicePixels="True">

                        <!-- Stellt die GridView-Spalten dar (Datum / Status / Kommentar ...) -->
                        <GridViewRowPresenter
                        Margin="{TemplateBinding Padding}"
                        Content="{TemplateBinding Content}"
                        Columns="{Binding
                            RelativeSource={RelativeSource AncestorType=ListView},
                            Path=View.Columns}"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!-- Alternierende Zeilenfarbe -->
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter TargetName="Bd"
                                Property="Background"
                                Value="{DynamicResource TextBoxBackground}"/>
                        </Trigger>

                        <!-- Hover-Effekt: gleichmäßige Fläche über die ganze Zeile -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd"
                                Property="Background"
                                 Value="{DynamicResource ListItemHoverBackground}"/>

                        </Trigger>

                        <!-- Auswahl-Effekt -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd"
                                Property="Background"
                                Value="{DynamicResource ButtonBackground}"/>
                            <Setter Property="Foreground"
                                Value="{DynamicResource ButtonText}"/>
                        </Trigger>

                        <!-- Für besseres Rendering bei deaktivierter Liste -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground"
                                Value="{DynamicResource TextForeground}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



